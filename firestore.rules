rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to get user data - call once and reuse
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user exists and is active admin
    function isActiveAdmin() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        getUserData().role == 'admin' &&
        getUserData().isActive != false;
    }

    // Check if user exists and is active editor or admin
    function isActiveEditor() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        getUserData().role in ['admin', 'editor'] &&
        getUserData().isActive != false;
    }

    // Check if user is active (not deactivated)
    function isActive() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        getUserData().isActive != false;
    }

    // Check development access
    function canAccessDevelopment(developmentId) {
      let userData = getUserData();
      return userData.role == 'admin' ||
             !('allowedDevelopments' in userData) ||
             userData.allowedDevelopments == null ||
             userData.allowedDevelopments.size() == 0 ||
             developmentId in userData.allowedDevelopments;
    }

    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read their own profile, admins can read all
      allow read: if isAuthenticated() && (
        request.auth.uid == userId ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );

      // Users can create their own profile on signup
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Users can update limited fields on their own profile, admins can update any user
      allow update: if isAuthenticated() && (
        // User updating their own limited fields
        (request.auth.uid == userId &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'lastLogin'])) ||
        // Admin updating any user
        isActiveAdmin()
      );

      // Only admins can delete users
      allow delete: if isActiveAdmin();
    }

    // Invites collection - admin only
    match /invites/{inviteId} {
      allow read: if isActiveAdmin();
      allow create: if isActiveAdmin();
      allow update: if isActiveAdmin();
      allow delete: if isActiveAdmin();
    }

    // Developments collection
    match /developments/{developmentId} {
      // All authenticated active users can read developments they have access to
      allow read: if isActive() && canAccessDevelopment(developmentId);

      // Only admins can create/update/delete developments
      allow create, update, delete: if isActiveAdmin();
    }

    // Units sub-collection under developments
    match /developments/{developmentId}/units/{unitId} {
      // Users can read units if they have access to the parent development
      allow read: if isActive() && canAccessDevelopment(developmentId);

      // Editors and admins can update units
      allow update: if isActiveEditor() && canAccessDevelopment(developmentId);

      // Only admins can create/delete units
      allow create, delete: if isActiveAdmin() && canAccessDevelopment(developmentId);
    }

    // Audit logs - admin read only, editors can create
    match /auditLogs/{logId} {
      allow read: if isActiveAdmin();
      allow create: if isActiveEditor();
      allow update, delete: if false; // Audit logs should never be modified or deleted
    }

    // Notes collection
    match /notes/{noteId} {
      allow read: if isActive();
      allow create: if isActiveEditor();
      allow update: if isActive() && (resource.data.createdBy == request.auth.uid || isActiveAdmin());
      allow delete: if isActiveAdmin();
    }

    // Incentive schemes - admin only for write
    match /incentiveSchemes/{schemeId} {
      allow read: if isActive();
      allow create, update, delete: if isActiveAdmin();
    }

    // Company settings
    match /settings/{settingId} {
      allow read: if isActive();
      allow write: if isActiveAdmin();
    }
  }
}
